<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/main.css">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
     
    <%- include('partials/navbar') %>
    
    <div class="navbar bg-base-100">
        <div class="flex-1">
          <a class="btn btn-ghost normal-case text-xl">Collection</a>
        </div>
        
         
        </div>
        
      </div>
      <div style = "text-align:center">
      <form action="/Lego/sets?theme=name">
      <input type="text" name = "theme" placeholder="Search According to Theme" class="input input-bordered input-warning w-full max-w-xs rounded-full" />
      </form> 
 
      <% sets.forEach(user=>{ %>
      <div style = "margin:20px; background-color:#67729D; margin:20 px 20px" class="flex flex-row">
        <div class="flex-1 flex justify-start items-center">
          <img style="width: 70px;margin-left:10px" src= <%= user.img_url %> alt="Error loading the image!">
        </div>

    <div class ="basis-1/4">
      <h1 style ="margin:40px;"><%=user.name%></h1>
    </div>
        <div class="basis-1/4">
          <ul style = "margin:20px">
            <li><p>Parts:<%= user.num_parts %> | Years: <%= user.year %> </p></li>
          <li> <p><%= themes.find(theme => theme.theme_id === user.theme_id).name %></p></li>
            </ul>
         
        </div>

        
        <div class="basis-1/4">
          <a href ="/lego/sets/<%= user.set_num%>"><button  style ="margin:40px"class="btn btn-secondary rounded-full">View Details</button></a>
          
        </div>
       
        
        
      </div>
      <% }) %>

</body>
</html>